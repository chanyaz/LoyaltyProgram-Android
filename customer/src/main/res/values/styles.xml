<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Qr -->

    <style name="Zalik.Qr.Header" parent="Zalik.Text">
        <item name="android:textColor">@color/qr_header_color</item>
        <item name="android:textSize">@dimen/size_qr_header</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Zalik.Qr.Header.Big">
        <item name="android:textSize">@dimen/size_qr_header_big</item>
    </style>

    <!-- Venues -->

    <style name="Zalik.Venues"/>

    <style name="Zalik.Venues.ImageContainer">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:layout_width">@dimen/size_venues_image_width</item>
        <item name="android:layout_height">@dimen/size_venues_image_height</item>
    </style>

    <style name="Zalik.Venues.Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Zalik.Venues.Icon">
        <item name="android:layout_width">@dimen/size_venues_icon</item>
        <item name="android:layout_height">@dimen/size_venues_icon</item>
    </style>

    <style name="Zalik.Venues.Header" parent="Zalik.Text">
        <item name="android:textSize">@dimen/size_venues_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Zalik.Venues.Main" parent="Zalik.Text">
        <item name="android:textSize">@dimen/size_venues_main</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Zalik.Venues.Secondary" parent="Zalik.Text">
        <item name="android:textSize">@dimen/size_venues_secondary</item>
    </style>

    <!-- Venue -->

    <style name="Zalik.Venue"/>

    <style name="Zalik.Venue.Header" parent="Zalik.Text">
        <item name="android:textColor">@color/venue_header_color</item>
        <item name="android:textSize">@dimen/size_venue_header</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Zalik.Venue.Secondary" parent="Zalik.Text">
        <item name="android:textColor">@color/venue_secondary_color</item>
        <item name="android:textSize">@dimen/size_venue_secondary</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Zalik.Venue.Option"/>

    <style name="Zalik.Venue.Option.Header" parent="Zalik.Text">
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/size_venue_option_header</item>
        <item name="android:textColor">@color/venue_option_header_color</item>
    </style>

    <style name="Zalik.Venue.Option.Description" parent="Zalik.Text">
        <item name="android:textSize">@dimen/size_venue_option_description</item>
        <item name="android:textColor">@color/venue_option_description_color</item>
    </style>

    <style name="Zalik.Venue.Option.Icon">
        <item name="android:layout_width">@dimen/size_venue_option_icon</item>
        <item name="android:layout_height">@dimen/size_venue_option_icon</item>
    </style>

    <style name="Zalik.Venue.Option.Text" parent="Zalik.Text">
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_venue_option_item_margin</item>
    </style>

    <style name="Zalik.Venue.Option.Text.Active">
        <item name="android:textSize">@dimen/size_venue_option_active</item>
        <item name="android:textColor">@color/venue_option_active_color</item>
    </style>

    <style name="Zalik.Venue.Option.Text.Inactive">
        <item name="android:textSize">@dimen/size_venue_option_inactive</item>
        <item name="android:textColor">@color/venue_option_inactive_color</item>
    </style>

    <style name="Zalik.Venue.Option.Text.Inactive.Secondary">
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Card -->

    <style name="Zalik.CardItem"/>

    <style name="Zalik.CardItem.Header" parent="Zalik.Text">
        <item name="android:textSize">@dimen/size_cards_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Zalik.CardItem.Main" parent="Zalik.Text">
        <item name="android:textSize">@dimen/size_cards_main</item>
    </style>

    <style name="Zalik.CardItem.Secondary" parent="Zalik.Text">
        <item name="android:textSize">@dimen/size_cards_secondary</item>
        <item name="android:textColor">@color/cards_text_secondary_color</item>
    </style>

    <style name="Zalik.CardItem.Date" parent="Zalik.Text">
        <item name="android:paddingStart">@dimen/margin_xsmall</item>
        <item name="android:paddingEnd">@dimen/margin_xsmall</item>
        <item name="android:paddingTop">@dimen/margin_xxsmall</item>
        <item name="android:paddingBottom">@dimen/margin_xxsmall</item>
        <item name="android:textSize">@dimen/size_cards_date</item>
        <item name="android:textColor">@color/cards_text_date_color</item>
    </style>

    <style name="Zalik.CardItem.Points" parent="Zalik.Text">
        <item name="android:textColor">@color/cards_points_color</item>
    </style>

    <style name="Zalik.CardItem.Points.Current">
        <item name="android:textSize">@dimen/size_cards_current_points</item>
    </style>

    <style name="Zalik.CardItem.Points.Current.Big">
        <item name="android:textSize">@dimen/size_cards_current_points_big</item>
    </style>

    <style name="Zalik.CardItem.Points.OutOf">
        <item name="android:textSize">@dimen/size_cards_out_of_points</item>
    </style>

    <style name="Zalik.CardItem.Points.OutOf.Big">
        <item name="android:textSize">@dimen/size_cards_out_of_points_big</item>
    </style>

</resources>
